<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/left3"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="23sp"
            android:textColor="#000"
            android:id="@+id/ctfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Components"
            android:layout_centerInParent="true"
            android:fontFamily="@font/kanit_regular"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/relativeLayout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginBottom="20dp"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.73">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="Unprotected Activity"
                        android:fontFamily="@font/kanit_regular"/>
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/textDescription"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Exported activities with no proper permissions can result intent re-direction"
                        android:fontFamily="@font/kanit_regular"/>
                </LinearLayout>
                <Button
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:id="@+id/button"
                    android:background="@drawable/green_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Start"
                    android:layout_weight="0.27"
                    android:textAllCaps="false"
                    android:fontFamily="@font/kanit_regular"/>
            </LinearLayout>
            <View
                android:id="@+id/divider2"
                android:background="?android:attr/listDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/relativeLayout3"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/divider2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:text="Vulnerable Service"
                    android:fontFamily="@font/kanit_regular"/>
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/textDescription3"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Without specific permissions, Services can be exploited by other applications including malicious ones"
                    android:layout_below="@+id/textTitle3"
                    android:fontFamily="@font/kanit_regular"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/button3"
                    android:background="@drawable/green_button"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Start"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/kanit_regular"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/divider3"
                android:background="?android:attr/listDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/relativeLayout4"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/divider3">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:text="Vulnerable Content Provider"
                    android:fontFamily="@font/kanit_regular"/>
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/textDescription4"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Without adequate protection, exported content providers can leak sensitive information"
                    android:layout_below="@+id/textTitle4"
                    android:fontFamily="@font/kanit_regular"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/button4"
                    android:background="@drawable/green_button"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Start"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/kanit_regular"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
