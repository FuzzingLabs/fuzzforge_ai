<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <app.beetlebug.utils.CustomProgressBar
            android:id="@+id/hardcoded_secrets_bar"
            android:layout_centerInParent="true"
            android:onClick="embeddedSecrets"
            style="@style/lesson_bar"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/key"
            android:layout_centerInParent="true"/>
        <TextView
            android:text="Hardcoded Secrets"
            android:layout_below="@+id/hardcoded_secrets_bar"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"
            style="@style/lesson_bar_text"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_local_storage"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:onClick="inSecureStorage"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/storage"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="53dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_marginTop="1dp"
                android:text="Data Storage"
                android:layout_below="@+id/progress_bar_local_storage"
                android:fontFamily="@font/kanit_regular"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_webview"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:onClick="webViewFlag"
                android:layout_marginStart="36dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/www"
                android:layout_alignParentTop="true"
                android:layout_marginStart="56dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_marginTop="1dp"
                android:text="WebViews"
                android:layout_below="@+id/progress_bar_webview"
                android:fontFamily="@font/kanit_regular"
                android:paddingStart="5dp"
                android:layout_marginStart="19dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_components"
                android:layout_marginTop="2dp"
                android:layout_alignParentTop="true"
                android:onClick="AndroidComponents"
                android:layout_marginEnd="35dp"
                android:layout_alignParentEnd="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/android"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="55dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="149dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:text="Android Components"
                android:layout_below="@+id/progress_bar_components"
                android:fontFamily="@font/kanit_regular"
                android:textAlignment="center"
                android:layout_marginStart="-36dp"
                android:layout_alignStart="@+id/progress_bar_components"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_bio"
                android:layout_marginTop="3dp"
                android:layout_alignParentTop="true"
                android:onClick="biometricAuth"
                android:layout_marginStart="34dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/fingerprint"
                android:layout_alignParentTop="true"
                android:layout_marginStart="56dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="172dp"
                android:layout_height="56dp"
                android:layout_marginTop="-2dp"
                android:text="Biometric Authentication"
                android:layout_below="@+id/progress_bar_bio"
                android:fontFamily="@font/kanit_regular"
                android:textAlignment="center"
                android:layout_marginStart="-11dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp">
        <app.beetlebug.utils.CustomProgressBar
            android:id="@+id/progress_bar_sensitive_info"
            android:layout_centerInParent="true"
            android:onClick="inSecureLoggingFlag"
            style="@style/lesson_bar"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/alert"
            android:layout_centerInParent="true"/>
        <TextView
            android:text="Sensitive Info Disclosure"
            android:layout_below="@+id/progress_bar_sensitive_info"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"
            style="@style/lesson_bar_text"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_database"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:onClick="databaseFlag"
                android:layout_marginEnd="33dp"
                android:layout_alignParentEnd="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/database"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="54dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_marginTop="1dp"
                android:text="Databases"
                android:layout_below="@+id/progress_bar_database"
                android:fontFamily="@font/kanit_regular"
                android:layout_marginStart="-8dp"
                android:layout_alignStart="@+id/progress_bar_database"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <app.beetlebug.utils.CustomProgressBar
                android:id="@+id/progress_bar_binary"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:onClick="patchBinary"
                android:layout_marginStart="42dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/binary"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Binary Patch"
                android:layout_below="@+id/progress_bar_binary"
                android:fontFamily="@font/kanit_regular"
                android:textAlignment="center"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                style="@style/lesson_bar_text"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:id="@+id/finish_button"
        android:background="@drawable/rectangle_yellow"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        android:onClick="submitFlags"
        android:textAllCaps="false"
        android:fontFamily="@font/kanit_regular"/>
</LinearLayout>
