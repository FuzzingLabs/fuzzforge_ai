<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/left3"
            android:onClick="goBack"/>
        <TextView
            android:textSize="27sp"
            android:textColor="#000"
            android:id="@+id/insecure_data_storage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Storage"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:padding="10dp"
        android:layout_width="400dp"
        android:layout_height="148dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/ctfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="Shared Preferences"
            android:fontFamily="@font/kanit_regular"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/textDescription"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Identify where sensitive information is stored within an application"
            android:layout_below="@+id/ctfTitle"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/button"
            android:background="@drawable/green_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Start"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:background="?android:attr/listDivider"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativeLayout3"
        android:padding="10dp"
        android:layout_width="400dp"
        android:layout_height="148dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/divider">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/textTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="External Storage"
            android:fontFamily="@font/kanit_regular"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/textDescription4"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Files saved to the external storage are world-readable and can be modified by the anyone "
            android:layout_below="@+id/textTitle4"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/button4"
            android:background="@drawable/green_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Start"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider3"
        android:background="?android:attr/listDivider"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativeLayout4"
        android:padding="10dp"
        android:layout_width="400dp"
        android:layout_height="148dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/divider3">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/textTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="SQLite Database"
            android:fontFamily="@font/kanit_regular"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/textDescription3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Identify unencrypted sensitive data stored on the SQLite database"
            android:layout_below="@+id/textTitle3"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/button3"
            android:background="@drawable/green_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Start"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
