<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <TextView
            android:textSize="27sp"
            android:textColor="#000"
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vulnerable Activity"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_layout2"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/green"
            android:id="@+id/hint"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint: "
            android:fontFamily="@font/kanit_regular"
            android:textAlignment="center"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#bfbfbf"
            android:id="@+id/hintText"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can bypass an exported Android Activity component using adb or drozer"
            android:fontFamily="@font/kanit_regular"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_layout3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout2"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Enter your passcode"
            android:fontFamily="@font/kanit_regular"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="17dp"
                android:layout_gravity="center"
                android:id="@+id/editText1"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="2"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/kanit_regular"/>
            <EditText
                android:textSize="17dp"
                android:layout_gravity="center"
                android:id="@+id/editText2"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="2"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/kanit_regular"/>
            <EditText
                android:textSize="17dp"
                android:layout_gravity="center"
                android:id="@+id/editText3"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="2"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/kanit_regular"/>
            <EditText
                android:textSize="17dp"
                android:layout_gravity="center"
                android:id="@+id/editText4"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="2"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/kanit_regular"/>
        </LinearLayout>
        <Button
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/button"
            android:background="@drawable/rectangle_yellow"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginTop="22dp"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            app:cornerRadius="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        android:weightSum="1"
        android:layout_alignParentBottom="true">
        <EditText
            android:textSize="17dp"
            android:id="@+id/flag"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="20dp"
            android:hint=" Enter Flag"
            android:layout_weight="0.5"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textColor="@android:color/black"
            android:id="@+id/buttonFlag"
            android:background="@drawable/rectangle_yellow"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="Submit"
            android:layout_weight="0.5"
            android:onClick="captureFlag"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"/>
    </LinearLayout>
</RelativeLayout>
