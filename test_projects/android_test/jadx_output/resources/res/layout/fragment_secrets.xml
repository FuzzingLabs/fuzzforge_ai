<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/left3"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/back2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/left3"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="23sp"
            android:textColor="#000"
            android:id="@+id/ctfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Embedded Secrets"
            android:layout_centerInParent="true"
            android:fontFamily="@font/kanit_regular"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:padding="10dp"
        android:layout_width="400dp"
        android:layout_height="148dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="Hardcoding Sensitive Data"
            android:fontFamily="@font/kanit_regular"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/textDescription"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Find where sensitive data is stored locally without encryption"
            android:layout_below="@+id/textTitle"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/button"
            android:background="@drawable/green_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Start"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:background="?android:attr/listDivider"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativeLayout2"
        android:padding="10dp"
        android:layout_width="400dp"
        android:layout_height="148dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/divider">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/textTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="Hardcoding Secrets"
            android:fontFamily="@font/kanit_regular"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/textDescription2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Locate hardcoded secrets in the application source code"
            android:layout_below="@+id/textTitle2"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/button2"
            android:background="@drawable/green_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Start"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
