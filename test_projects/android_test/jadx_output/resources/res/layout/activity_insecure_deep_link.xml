<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <TextView
            android:textSize="27sp"
            android:textColor="#000"
            android:id="@+id/current_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insecure Deeplink"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linear_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/toolbar">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:id="@+id/hint"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Hint: "
                    android:fontFamily="@font/kanit_regular"
                    android:textAlignment="center"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#bfbfbf"
                    android:id="@+id/hintText"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Check AndroidManifest for schema and use it to exploit the poor Deep Link implementation"
                    android:fontFamily="@font/kanit_regular"/>
            </LinearLayout>
            <EditText
                android:textSize="17dp"
                android:layout_gravity="center"
                android:id="@+id/editTextURI"
                android:background="@drawable/edit_text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginTop="70dp"
                android:hint="app://beetlebug/"
                android:ems="10"
                android:inputType="textUri"
                android:fontFamily="@font/kanit_regular"/>
            <Button
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:id="@+id/buttonGoToUri"
                android:background="@drawable/rectangle_yellow"
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Connect"
                android:onClick="doBasicAuth"
                android:textAllCaps="false"
                android:fontFamily="@font/kanit_regular"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:weightSum="1"
        android:layout_alignParentBottom="true">
        <EditText
            android:textSize="17dp"
            android:id="@+id/flag"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="20dp"
            android:hint=" Enter Flag"
            android:layout_weight="0.5"
            android:fontFamily="@font/kanit_regular"/>
        <Button
            android:textColor="@android:color/black"
            android:id="@+id/button"
            android:background="@drawable/rectangle_yellow"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="Submit"
            android:layout_weight="0.5"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_regular"/>
    </LinearLayout>
</RelativeLayout>
